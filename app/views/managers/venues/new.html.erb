<section class="venues section">
  <div class="container">
    <div class="row">
      <div class="col m4 offset-m4">
        <%= form_for([:managers, @venue]) do |f| %>
          <div class="card">
            <div class="card-content">
              <span class="card-title">Dodaj obiekt</span>
              <% if @venue.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>
                  <ul>
                    <% @venue.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="field">
                <%= f.label :name, 'Nazwa' %><br>
                <%= f.text_field :name %>
              </div>
            </div>
            <div class="card-action">
              <%= f.submit class: 'btn' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</section>
