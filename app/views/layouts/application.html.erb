<!DOCTYPE html>
<html>
<head>
  <title>OTOKonfa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <div class='container'>
        <%= link_to root_path, class: 'brand-logo' do %>
          <%= image_tag 'otokonfa-white', alt: (t 'home'), class: 'header-logo' %>
        <% end %>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li class="<%= ("active" if params[:controller] == "venues") %>">
            <%= link_to venues_path do %>
              <i class="material-icons left">business</i><%= t "venues.navbar.title" %>
            <% end %>
          </li>
          <% if manager_signed_in? %>
            <li class="<%= ("active" if params[:controller] == "users/registrations") %>">
              <%= link_to edit_manager_registration_path do %>
                <%= current_manager.first_name %> (M.)
                <i class='material-icons left'>account_box</i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_manager_session_path, method: :delete do %>
                <%= I18n.t 'authentication.sign_out' %>
                <i class='material-icons left'>power_settings_new</i>
              <% end %>
            </li>
          <% else %>
            <% if !user_signed_in? %>
              <li class="<%= ("active" if params[:controller] == "users/sessions") %>"><%= link_to (t 'authentication.sign_in'), new_user_session_path %></li>
              <li><%= link_to (t 'authentication.sign_up'), new_user_registration_path, class: 'waves-effect waves-light btn' %></li>
            <% else %>
              <li class="<%= ("active" if params[:controller] == "users/registrations") %>">
                <%= link_to edit_user_registration_path do %>
                  <%= current_user.first_name %>
                  <i class='material-icons left'>account_box</i>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= I18n.t 'authentication.sign_out' %>
                  <i class='material-icons left'>power_settings_new</i>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class='container'>
    <% if !notice.nil? %>
      <div class='row'>
        <div class='col s12 m6 offset-m3'>
          <div class='card green darken-3'>
            <div class='card-content white-text'>
              <p><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if !alert.nil? %>
      <div class='row'>
        <div class='col s12 m6 offset-m3'>
          <div class='card red darken-3'>
            <div class='card-content white-text'>
              <p><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
