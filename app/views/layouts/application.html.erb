<!DOCTYPE html>
<html>
<head>
  <title>OTOKonfa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <%= link_to root_path, class: 'brand-logo' do %>
        <%= image_tag 'otokonfa-white', alt: (t 'home'), class: 'header-logo' %>
      <% end %>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if !user_signed_in? %>
          <%= link_to (t 'authorization.sign_in'), new_user_session_path %>
          <%= link_to (t 'authorization.sign_up'), new_user_registration_path %>
        <% else %>
          Zalogowano jako <%= current_user.first_name %> <%= current_user.last_name %>.
          <%= link_to (t 'authorization.sign_out'), destroy_user_session_path, method: :delete %>
        <% end %>
      </ul>
    </div>
  </nav>
  <div class='container'>
    <%= yield %>
  </div>
</body>
</html>
