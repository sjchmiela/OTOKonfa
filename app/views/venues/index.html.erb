<section class="venues section">
  <div class="container">
    <div class="row">
      <% if @venues.each do |venue| %>
        <%= render partial: 'venue', locals: { venue: venue } %>
      <% end.empty? %>
        <div class="card">
          <div class="card-content black-text">
            <span class="card-title"><%= t 'not_found.title' %></span>
            <p><%= t 'not_found.description' %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
