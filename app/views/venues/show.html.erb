<div class="row">
  <div class="col s12">
    <h1><%= @venue.name %></h1>
  </div>
  <div class="col s12 m6">
    <div class="card lighten-5">
      <div class="card-content black-text">
        <span class="card-title">Opis</span>
        <p><%= @venue.description %></p>
      </div>
    </div>
  </div>
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content black-text">
        <span class="card-title">Kontakt</span>
        <div class="row">
          <div class="col s8">
            <p><%= @venue.address %></p>
          </div>
          <div class="col s4">
            <p><a href="tel:<%= @venue.phone %>"><i class="tiny material-icons">phone</i><%= @venue.phone %></a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
